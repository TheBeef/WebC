const char *Ex6CCode= =?>
#include "WCWebAPI.h"

void RepeatAfterMe(int Times,const char *String);

void MyPageFunction(void)
{
    wcecho("<!DOCTYPE HTML>\n"
        "<html>\n"
        "   <head>\n"
        "       <title>Page Functions</title>\n"
        "   </head>\n"
        "   <body>\n");
    RepeatAfterMe(4,"Four is good<br/>");
    wcecho("   </body>\n"
        "</html>\n");
}

void RepeatAfterMe(int Times,const char *String)
{
    int r;

    for(r=0;r<Times;r++)
        wcecho(String);
}

